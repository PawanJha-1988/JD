@model JD.BusinessEntity.Users

<div class="table">
    <div class="row">
        <div class="form-group">
            <div class="col-sm-2">
                <label> User Name</label>
            </div>
            <div class="col-sm-3">
                <div class='input-group text-info'>
                    @Html.TextBoxFor(model => model.name, new
               {
                   @class = "form-control input-sm",
                   @placeholder = "Email/Mobile",
                   @data_provide = "typeahead",
                   autocomplete = "off"
               })
                    <span class="input-group-addon" data-toggle="modal" data-target="#mod-empsearch"><span class="glyphicon glyphicon-user"></span></span>
                </div>
            </div>
        </div>


    </div>
    <div class="row">
        &nbsp;
    </div>
    <div class="row">
        <div class="col-sm-2">
            <label> Password</label>
        </div>

        <div class="col-sm-3">
            <div class='input-group text-info'>
                @Html.TextBoxFor(model => model.password, new { @class = "form-control input-sm", @placeholder = "Password", @data_provide = "typeahead", autocomplete = "off" })
                <span class="input-group-addon" data-toggle="modal" data-target="#mod-empsearch"><span class="glyphicon glyphicon-eye-open"></span></span>
            </div>

        </div>

    </div>
    <div class="row">
        &nbsp;
    </div>
    <div class="row">
        <div class="col-sm-2">
            &nbsp;
        </div>
        <div class="col-sm-3">
            <div class="btn-group">
                <input type="submit" value="Login" class="btn-default btn-primary" id="submit" name="submit" />
            </div>
        </div>
    </div>
</div>